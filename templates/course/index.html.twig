{% extends 'base.html.twig' %}

{% block title %}Matière - {{ course.name }}{% endblock %}

{% block body %}
<h1> {{ course.name }}</h1>

{% if newExercises %}

<h2>Nouveautés</h2>

<div class="mb-12">
    <table>
        <thead class="tableHeader">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Nom
                </th>
                <th scope="col" class="px-6 py-3">
                    Niveau
                </th>
                <th scope="col" class="px-6 py-3">
                    Thématique
                </th>
                <th scope="col" class="px-6 py-3">
                    Difficulté
                </th>
                <th scope="col" class="px-6 py-3">
                    Durée
                </th>
                <th scope="col" class="px-6 py-3">
                    Mots Clés
                </th>
                <th scope="col" class="px-6 py-3">
                    Fichiers
                </th>
            </tr>
        </thead>
        <tbody>
            {% if newExercises is not empty %}
                    {% for exercise in newExercises %}
                        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600" data-element-id="{{ exercise.id }}">
                            <th>
                                {{ exercise.name }}
                            </th>
                            <td>
                                {{ exercise.classroom.name }}
                            </td>
                            <td>
                                {{ exercise.thematic.name }}
                            </td>
                            <td>
                                Niveau&nbsp;{{ exercise.difficulty }}
                            </td>
                            <td>
                                {{ exercise.duration }}
                            </td>
                            <td class="flex">
                            {% set keywords = exercise.keywords|split('@') %}
                            {% for keyword in keywords %}
                                {% if keyword != "" %}
                                <span class="keyword">{{ keyword }}</span>
                                {% endif %}
                            {% endfor %}
                            </td>
                            <td>
                                <a class="flex gap-2 items-center justify-start hover:underline" <a href="{{ asset('images/file/' ~ exercise.exerciseFile.name) }}" download="enonce"><i class="fa-solid fa-file-arrow-down"></i>Énoncé</a>
                                <a class="flex gap-2 items-center justify-start hover:underline" href="{{  asset('images/file/' ~ exercise.correctionFile.name) }}" download="correction"><i class="fa-solid fa-file-arrow-down"></i>Correction</a>
                            </td>
                        </tr>
                    {% endfor %}
            {% else %}
                <tr><td colspan="6" class='text-center text-lg p-4'>Aucun exercice trouvé.</td></tr>
            {% endif %}
            
        </tbody>
    </table>
</div>

{% endif %}


