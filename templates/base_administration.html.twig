        // JavaScript code to set active class based on current URL
        document.addEventListener("DOMContentLoaded", function() {
			var url = window.location.pathname;
			var navItems = document.getElementById("navigation").getElementsByTagName("a");

			for (var i = 0; i < navItems.length; i++) {
				var href = navItems[i].getAttribute("href");

				// Vérifie si l'URL contient la partie spécifique
				if (url.includes(href)) {
					navItems[i].classList.add("active");
					navItems[i].classList.remove("opacity-80");
					navItems[i].setAttribute("aria-current", "page");
				}
			}
		});

		function rotateChevron(button) {
			var chevron = button.querySelector('.chevron-rotate');
			if (chevron.classList.contains('rotate-keyframesOpen')) {
				chevron.classList.remove('rotate-keyframesOpen');
				chevron.classList.add('rotate-keyframesClose');

			} else {
				if (chevron.classList.contains('rotate-keyframesClose')) {
					chevron.classList.remove('rotate-keyframesClose')
				}
				chevron.classList.add('rotate-keyframesOpen');
			}

		}
	</script>
