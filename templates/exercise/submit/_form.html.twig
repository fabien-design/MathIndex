{{ form_start(form, { 'attr':
    {'id':'exerciceForm'}
}) }}
    <div class="hidden" id="infos" role="tabpanel" aria-labelledby="infos-tab">
        <h2 class="pt-6">Informations Générales</h2>
        <div class="flex">
            <div class="w-full pr-6">
                {{ form_row(form.name) }}
                {{ form_row(form.course) }}
                {{ form_row(form.classroom) }}
                {{ form_row(form.thematic) }}
                {{ form_row(form.chapter) }}
            </div>
            <div class="w-full pl-6">
                {{ form_row(form.skills) }}
                {{ form_row(form.fakeKeywords) }}
                {{ form_row(form.keywords) }}
                {{ form_row(form.difficulty) }}
                {{ form_row(form.duration) }}
            </div>
        </div>
        <div>
            <button class="btn px-12 rounded-lg py-5 bg-gray-100 text-neutral-600" onclick="document.getElementById('sources-tab').click()">Continuer</button>
        </div>
    </div>
    <div class="hidden" id="sources" role="tabpanel" aria-labelledby="sources-tab">
        <h2 class="pt-6">Sources</h2>
        <div class="flex">
            <div class="w-full pr-6 ">
                {{ form_row(form.origin) }}
                {{ form_row(form.originName) }}
                {{ form_row(form.originInformation) }}
            </div>
            <div class="w-full pl-6">
                {{ form_row(form.proposedByType) }}
                {{ form_row(form.proposedByLasName) }}
                {{ form_row(form.proposedByFirstName) }}
            </div>
        </div>
        <div>
            <button class="btn px-12 rounded-lg py-5 bg-gray-100 text-neutral-600" onclick="document.getElementById('files-tab').click()">Continuer</button>
        </div>
    </div>
    <div class="hidden" id="files" role="tabpanel" aria-labelledby="files-tab">
        <h2 class="pt-6">Fichiers</h2>
        <div class="flex">
            <div class="w-full pr-6 ">
                {{ form_row(form.enonceFile) }}
                {{ form_row(form.correctFile) }}
            </div>  
        </div>
        <div>
            <button class="btn px-12 rounded-lg py-5 bg-gray-100 text-neutral-600" onclick="this.preventDefault( )" onclick="">Enregistrer</button>
        </div>
    </div>
{{ form_end(form) }}
